<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:orientation="vertical"
	tools:context=".Activities.BrowseMovieActivity">

	<android.support.v7.widget.Toolbar
		android:id="@+id/reviewToolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/colorPrimary"
		android:elevation="4dp"
		android:minHeight="?attr/actionBarSize"
		android:theme="@style/AppTheme"
		app:layout_collapseMode="pin"
		app:layout_scrollFlags="scroll|enterAlways"
		app:titleTextColor="@android:color/white"/>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:elevation="3dp"
		android:layout_marginTop="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="8dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="8dp">

			<LinearLayout
				android:id="@+id/averageRatingGroup"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:orientation="vertical"
				android:layout_centerVertical="true">

				<TextView
					android:id="@+id/scoreTitleText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="-8dp"
					android:textColor="@color/black"
					android:text="RATING"/>

				<TextView
					android:id="@+id/bigAverageScoreText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="50sp"
					tools:text="5.0"
					android:textColor="@color/black"
					android:layout_marginBottom="-10dp"/>
				<RatingBar
					android:id="@+id/averageRatingBar"
					style="@style/Base.Widget.AppCompat.RatingBar.Small"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:rating="5"
					android:stepSize="0.5"
					android:layout_gravity="center_vertical|center_horizontal"/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/totalUserReviews"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="10dp"
						tools:text="252456 "
						android:textColor="@color/black"
						android:layout_gravity="center_vertical"/>

					<ImageView
						android:layout_width="15dp"
						android:layout_height="15dp"
						android:src="@drawable/ic_person_black_24dp"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>

			</LinearLayout>

			<View
				android:id="@+id/scoreDivider"
				android:layout_width="1dp"
				android:layout_height="85dp"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@id/averageRatingGroup"
				android:background="#ddd"
				android:layout_marginRight="8dp"/>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginRight="8dp"
				android:layout_toEndOf="@id/scoreDivider"
				android:orientation="vertical"
				android:layout_centerVertical="true">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="4dp">

					<RatingBar
						style="@style/Base.Widget.AppCompat.RatingBar.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:rating="5"
						android:layout_gravity="center_vertical"/>

					<ProgressBar
						android:id="@+id/rating_fiveStar"
						style="@style/Widget.AppCompat.ProgressBar.Horizontal"
						android:layout_width="75dp"
						android:layout_height="match_parent"
						android:indeterminate="false"
						android:max="100"
						android:layout_gravity="center_vertical"/>

					<TextView
						android:id="@+id/rating_fiveStarText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="255"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="4dp">

					<RatingBar
						style="@style/Base.Widget.AppCompat.RatingBar.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:indeterminate="false"
						android:rating="4"
						android:layout_gravity="center_vertical"/>

					<ProgressBar
						android:id="@+id/rating_fourStar"
						style="@style/Widget.AppCompat.ProgressBar.Horizontal"
						android:layout_width="75dp"
						android:layout_height="match_parent"
						android:max="100"
						android:layout_gravity="center_vertical"/>

					<TextView
						android:id="@+id/rating_fourStarText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="255"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="4dp">

					<RatingBar
						style="@style/Base.Widget.AppCompat.RatingBar.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:indeterminate="false"
						android:rating="3"
						android:layout_gravity="center_vertical"/>

					<ProgressBar
						android:id="@+id/rating_threeStar"
						style="@style/Widget.AppCompat.ProgressBar.Horizontal"
						android:layout_width="75dp"
						android:layout_height="match_parent"
						android:max="100"
						android:layout_gravity="center_vertical"/>

					<TextView
						android:id="@+id/rating_threeStarText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="255"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="4dp">

					<RatingBar
						style="@style/Base.Widget.AppCompat.RatingBar.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:indeterminate="false"
						android:rating="2"
						android:layout_gravity="center_vertical"/>

					<ProgressBar
						android:id="@+id/rating_twoStar"
						style="@style/Widget.AppCompat.ProgressBar.Horizontal"
						android:layout_width="75dp"
						android:layout_height="match_parent"
						android:max="100"
						android:layout_gravity="center_vertical"/>

					<TextView
						android:id="@+id/rating_twoStarText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="255"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<RatingBar
						style="@style/Base.Widget.AppCompat.RatingBar.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:indeterminate="false"
						android:rating="1"
						android:layout_gravity="center_vertical"/>

					<ProgressBar
						android:id="@+id/rating_oneStar"
						style="@style/Widget.AppCompat.ProgressBar.Horizontal"
						android:layout_width="75dp"
						android:layout_height="match_parent"
						android:max="100"
						android:layout_gravity="center_vertical"/>

					<TextView
						android:id="@+id/rating_oneStarText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="255"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>

			</LinearLayout>

		</RelativeLayout>

	</android.support.v7.widget.CardView>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/fullReviewRecycleView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:orientation="vertical"
		android:paddingBottom="8dp"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"/>

</LinearLayout>